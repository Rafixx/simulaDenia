---
import type { SectionWithGroups } from "../data/types";
import CourseList from "./CourseList.astro";
import { useTranslations } from "../utils/languageStore";

interface Props {
  groups: SectionWithGroups;
}

const { groups } = Astro.props;
const t = useTranslations();

// Filtrar solo las propiedades que contienen arrays de cursos (excluyendo "Descripción")
const groupEntries = Object.entries(groups).filter(
  ([key, value]) => key !== "Descripción" && Array.isArray(value)
);
---

{
  groupEntries.length > 0 ? (
    <div class="space-y-4">
      {groupEntries.map(([groupName, items]) => (
        <details class="group/nested border border-gray-200 dark:border-gray-600 rounded-lg">
          <summary class="cursor-pointer list-none p-3 bg-gray-50 dark:bg-gray-700 rounded-t-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            <div class="flex items-center justify-between">
              <h3 class="font-semibold text-gray-900 dark:text-white">
                {groupName}
              </h3>
              <div class="flex items-center space-x-2">
                <span class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-2 py-1 rounded-full">
                  {Array.isArray(items) ? items.length : 0}{" "}
                  {Array.isArray(items) && items.length === 1
                    ? t.courseCount.singular
                    : t.courseCount.plural}
                </span>
                <svg
                  class="w-4 h-4 text-gray-500 transition-transform group-open/nested:rotate-180"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"
                  />
                </svg>
              </div>
            </div>
          </summary>

          <div class="p-4 bg-white dark:bg-gray-800 rounded-b-lg border-t border-gray-200 dark:border-gray-600">
            {Array.isArray(items) && <CourseList items={items} />}
          </div>
        </details>
      ))}
    </div>
  ) : (
    <p class="text-gray-500 dark:text-gray-400 italic text-center py-8">
      {t.noCourses}
    </p>
  )
}
