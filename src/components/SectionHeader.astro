---
import type { SectionMeta } from "../data/types";

interface Props {
  meta: SectionMeta;
  sectionDescription?: string;
}

const { meta, sectionDescription } = Astro.props;
---

<header class="mb-6">
  <h2
    class="text-3xl font-bold text-gray-900 dark:text-white mb-6"
    data-i18n={`sections.${meta.key}.title`}
  >
    {meta.title}
  </h2>

  <!-- Card con imagen izquierda y texto derecha -->
  <div
    class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden"
  >
    <div class="md:flex">
      <!-- Imagen izquierda -->
      <div class="md:w-1/3 lg:w-2/5">
        <img
          src={meta.imageUrl}
          alt={`Imagen de ${meta.title}`}
          class="w-full h-48 md:h-full object-cover hover:scale-105 transition-transform duration-300"
          loading="lazy"
        />
      </div>

      <!-- Contenido derecha -->
      <div class="md:w-2/3 lg:w-3/5 p-6 flex flex-col justify-center">
        <div class="mb-4">
          <p
            class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed"
            data-i18n={`sections.${meta.key}.description`}
          >
            {meta.description}
          </p>
        </div>

        {
          sectionDescription && (
            <div class="pt-4 border-t border-gray-200 dark:border-gray-600">
              <p class="text-sm text-gray-500 dark:text-gray-400 italic">
                {sectionDescription}
              </p>
            </div>
          )
        }
      </div>
    </div>
  </div>
</header>
